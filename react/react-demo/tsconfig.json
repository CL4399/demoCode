{
    "ts-node": { // 这个是属于ts-node去编译配置文件的时候会执行的配置和开发的配置有所不同
        "compilerOptions": {
            "module": "commonjs",
            "target": "es5",
            "sourceMap": true,
            "removeComments": true,
            "strict": true,
            "noImplicitAny": true,
            "strictNullChecks": true,
            "moduleResolution": "node",
            "baseUrl": "./",
            "typeRoots": ["node_modules/@types"],
            "esModuleInterop": true
        },
        "exclude": ["node_modules"],
        "include": [
            "config/*"
        ]
    },
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "jsx": "react-jsx",
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@assets/*": ["src/assets/*"],
            "@pages/*": ["src/pages/*"],
            "@router/*": ["src/router/*"],
            "@api/*": ["src/api/*"],
            "@hooks/*": ["src/hooks/*"],
            "@store/*": ["src/store/*"]
        },
        "typeRoots": ["typings/*.d.ts", "node_modules/@types"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
    },
    "exclude": ["node_modules", "config/*"],
    "include": ["src/*", "src/router/*", "typings/*.d.ts"]
}